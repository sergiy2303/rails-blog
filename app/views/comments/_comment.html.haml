.comment
  .comment_header
    %strong= comment.user.name
    .pull-right
      .date= comment.created_at.to_time.strftime("%A, %B %d, %Y at %H:%M")
      = link_to t('buttons.delete'), [comment.article, comment], class: 'btn btn-danger btn-xs' if user_signed_in? && (comment.owned_by?(current_user) || @article.owned_by?(current_user))
  .comment_body
    = comment.body
  %p.date
