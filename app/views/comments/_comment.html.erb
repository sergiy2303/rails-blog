<div class="comment">
<div class="comment_header">
  <strong><%= comment.user.name %></strong>
  <div class="pull-right">
    <div class="date"><%= comment.created_at.to_time.strftime("%A, %B %d, %Y at %H:%M") %></div>
    <%= link_to 'Delete', [comment.article, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' },
               class: 'btn btn-danger btn-xs' if comment.owned_by?(current_user) || @article.owned_by?(current_user) %>
  </div>
</div>
<div class="comment_body"><%= comment.body %> </div>
<p class="date"></p>
</div>
